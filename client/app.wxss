/**app.wxss**/
div,
section {
  display: block;
}

.black {
  color: aquamarine;
}

/* iconfont */
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-star:before { content: "\e627"; }

.icon-jiantou:before { content: "\e66b"; }

.icon-local:before { content: "\e637"; }

.icon-search:before { content: "\e66f"; }

.icon-join:before { content: "\e614"; }

.icon-right-arrows:before { content: "\e731"; }

.icon-coffee:before { content: "\e664"; }

.icon-list:before { content: "\e616"; }

@font-face {
  font-family: 'iconfont';
  src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
  font-weight: normal;
  font-style: normal;
}

/* 卡片 */
.card-section {
  display: block;
  box-sizing: border-box;
  width: 100%;
  margin: 10px 0 0 0;
  padding: 20px 17px;
  background: #fff;
}

.card-section .title {
  font-size: 18px;
  line-height: 1em;
  padding: 0 0 10px 0;
}

/* 底部版权 */
.bottom-right {
  width: 100%;
  text-align: center;
  font-size: 14px;
  line-height: 1.5em;
  color: #999999;
  margin: 15px 0 15px;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -1px 4px 0 rgba(0, 0, 0, 0.20);
  text-align: center;
  font-size: 16px;
  line-height: 48px;
  color: #fff;
  background: #F75F48;
}
